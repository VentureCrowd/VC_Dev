<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>62.0</apiVersion>
    <areMetricsLoggedToDataCloud>false</areMetricsLoggedToDataCloud>
    <description>Next Step Update of Opportunity</description>
    <environments>Default</environments>
    <formulas>
        <name>NextStep_Date_Time</name>
        <dataType>DateTime</dataType>
        <expression>{!$Record.Next_Action_Date_Time__c}</expression>
    </formulas>
    <formulas>
        <name>Today</name>
        <dataType>DateTime</dataType>
        <expression>Now()</expression>
    </formulas>
    <interviewLabel>Opportunity - Next Step Update {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Opportunity - Next Step Update</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordUpdates>
        <name>Update_Step_History</name>
        <label>Update Step History</label>
        <locationX>176</locationX>
        <locationY>323</locationY>
        <inputAssignments>
            <field>Step_History__c</field>
            <value>
                <elementReference>StepHistoryUpdate</elementReference>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <start>
        <locationX>50</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Update_Step_History</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>NextStep</field>
            <operator>IsChanged</operator>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </filters>
        <filters>
            <field>RecordTypeId</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>0122v000002VOzfAAG</stringValue>
            </value>
        </filters>
        <object>Opportunity</object>
        <recordTriggerType>CreateAndUpdate</recordTriggerType>
        <triggerType>RecordAfterSave</triggerType>
    </start>
    <status>Obsolete</status>
    <textTemplates>
        <name>StepHistoryUpdate</name>
        <isViewedAsPlainText>false</isViewedAsPlainText>
        <text>&lt;p&gt;&lt;em style=&quot;color: rgb(3, 44, 247);&quot;&gt;{!Today}&lt;/em&gt;&lt;/p&gt;&lt;p&gt;&lt;strong&gt;{!$User.FirstName} {!$User.LastName}&amp;nbsp;&lt;/strong&gt;- {!New_Step}&lt;/p&gt;&lt;p&gt;To be completed on &lt;strong style=&quot;color: rgb(21, 0, 255);&quot;&gt;{!NextStep_Date_Time}&lt;/strong&gt;&lt;/p&gt;&lt;p&gt;&lt;br&gt;&lt;/p&gt;&lt;p&gt;{!Old_Steps}&lt;/p&gt;</text>
    </textTemplates>
    <variables>
        <name>New_Step</name>
        <dataType>String</dataType>
        <isCollection>false</isCollection>
        <isInput>true</isInput>
        <isOutput>true</isOutput>
        <value>
            <elementReference>$Record.NextStep</elementReference>
        </value>
    </variables>
    <variables>
        <name>Old_Steps</name>
        <dataType>String</dataType>
        <isCollection>false</isCollection>
        <isInput>true</isInput>
        <isOutput>true</isOutput>
        <value>
            <elementReference>$Record.Step_History__c</elementReference>
        </value>
    </variables>
</Flow>
