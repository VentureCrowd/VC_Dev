        </connector>
    </assignments>
    <decisions>
        <description>This decision element evaluates whether the related account has activity within the past 90 days and ensures the &quot;next step&quot; field on the opportunity is populated</description>
        <name>Check_Account_Activity_and_Next_Step</name>
        <label>Check Account Activity and Next Step</label>
        <locationX>176</locationX>
        <locationY>134</locationY>
        <defaultConnector>
            <targetReference>Check_the_Opportunity_Record_Type</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>Has_Activity</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>Input_Opportunity.Account.LastActivityDate</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <elementReference>Date_90_Days_Ago</elementReference>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>Input_Opportunity.NextStep</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>$GlobalConstant.False</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>Input_Opportunity.CM_Assigned__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>$GlobalConstant.False</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>Input_Opportunity.OwnerId</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>$GlobalConstant.False</stringValue>
                </rightValue>
            </conditions>
            <label>Has Activity</label>
        </rules>
    </decisions>
    <decisions>
        <name>Check_the_Opportunity_Record_Type</name>
        <label>Check the Opportunity Record Type</label>
        <locationX>440</locationX>
        <locationY>242</locationY>
        <defaultConnector>
            <targetReference>Assign_Property_Opportunity_Owner</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>Property Product</defaultConnectorLabel>
        <rules>
            <name>VC_Product</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>Input_Opportunity.Associated_Product_Type__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>VC Product</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Assign_VC_Opportunity_Owner</targetReference>
            </connector>
            <label>VC Product</label>
        </rules>
    </decisions>
    <description>This flow will update the CM Assigned and Opportunity owner fields based on round robin logic</description>
    <environments>Default</environments>
    <formulas>
        <name>Date_90_Days_Ago</name>
        <dataType>Date</dataType>
        <expression>TODAY() - 90</expression>
    </formulas>
    <formulas>
        <name>OpportunityOwner_Assignment_Formula</name>
        <dataType>String</dataType>
        <expression>IF(
    {!Input_Opportunity.Associated_Product_Type__c} = &quot;VC Product&quot;,
    IF(
        MOD(VALUE({!Input_Opportunity.Opportunity_auto_number__c}), 100) &lt; 60, 
        &quot;0055i00000CW2nXAAT&quot;, 
        &quot;0055i00000C43RYAAZ&quot;    
    ), 
    IF(
       {!Input_Opportunity.Associated_Product_Type__c} = &quot;Property Product&quot;,
        IF(
            MOD(VALUE({!Input_Opportunity.Opportunity_auto_number__c}), 100) &lt; 60, 
            &quot;0055i00000C43RYAAZ&quot;,  
            &quot;0055i00000C43RYAAZ&quot;    
        ), 
        null  
    )
)</expression>
    </formulas>
    <interviewLabel>Opportunity: VC/Property Product Assignment {!$Flow.CurrentDateTime}</interviewLabel>
