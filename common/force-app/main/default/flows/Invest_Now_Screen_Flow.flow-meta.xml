    <formulas>
        <name>ExistingContriFee</name>
        <dataType>Currency</dataType>
        <expression>{!investmentValueN}*({!originalContributionFeeN}  / 100)</expression>
        <scale>2</scale>
    </formulas>
    <formulas>
        <name>investmentValueFormula</name>
        <dataType>Number</dataType>
        <expression>IF(
    NOT(ISNULL({!investmentAmountInput})), 
    {!investmentAmountInput}, 
    IF(
        AND(NOT(ISNULL({!investmentQuantityInput})), NOT(ISNULL({!salePriceInput}))), 
        {!investmentQuantityInput} * {!salePriceInput}, 
        NULL
    )
)</expression>
        <scale>2</scale>
    </formulas>
    <formulas>
        <name>investmentValueFormulaN</name>
        <dataType>Currency</dataType>
        <expression>IF(
    NOT(ISNULL({!investmentAmountInput})), 
    {!investmentAmountInput}, 
    IF(
        AND(NOT(ISNULL({!investmentQuantityInput})), NOT(ISNULL({!salePriceInput}))), 
        {!investmentQuantityInput} * {!salePriceInput}, 
        NULL
    )
)</expression>
        <scale>2</scale>
    </formulas>
    <formulas>
        <name>modifiedContributionCalculation</name>
        <dataType>Number</dataType>
        <expression>{!investmentValueN} *( {!contributionFeeN}/ 100)</expression>
        <scale>2</scale>
    </formulas>
    <formulas>
        <name>modifiedContributionCalculationN</name>
        <dataType>Currency</dataType>
        <expression>{!investmentValueN}*( {!contributionFeeN} / 100)</expression>
        <scale>2</scale>
    </formulas>
    <formulas>
        <name>quantityCalculation</name>
        <dataType>Number</dataType>
        <expression>IF(
    ISBLANK({!investmentQuantityInput}), 
    {!investmentValueN}/ {!salePriceN}, 
    {!investmentQuantityInput}
)</expression>
        <scale>2</scale>
    </formulas>
    <formulas>
        <description>This calculates the total price</description>
        <name>totalPriceFormula</name>
        <dataType>Number</dataType>
        <expression>{!investmentValueN} + {!FinalContributionFee}</expression>
        <scale>2</scale>
    </formulas>
    <formulas>
        <name>totalPriceFormulaN</name>
        <dataType>Currency</dataType>
        <expression>{!investmentValueN} +{!FinalContributionFee}</expression>
        <scale>2</scale>
    </formulas>
