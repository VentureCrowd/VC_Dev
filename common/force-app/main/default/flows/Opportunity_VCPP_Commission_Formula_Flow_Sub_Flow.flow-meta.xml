        <rules>
            <name>VCPP</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>Input_Opportunity.RecordType.DeveloperName</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>VCPP</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Update_Contracts_Administration_Fee</targetReference>
            </connector>
            <label>VCPP</label>
        </rules>
    </decisions>
    <description>This flow will calculate the VCPP commission structure on Opportunities.</description>
    <environments>Default</environments>
    <formulas>
        <name>Gross_commissionFormula</name>
        <dataType>Number</dataType>
        <expression>{!Input_Opportunity.Total_Product_Price__c} * {!Input_Opportunity.Invested_Product_ADMIN_FIELD__r.Masterplan__r.Gross_Sales_Commission__c}</expression>
        <scale>0</scale>
    </formulas>
    <formulas>
        <name>Gross_commissionFormulaNew</name>
        <dataType>Currency</dataType>
        <expression>{!Input_Opportunity.Total_Product_Price__c} * ({!Input_Opportunity.Invested_Product_ADMIN_FIELD__r.Masterplan__r.Gross_Sales_Commission__c})/100</expression>
        <scale>2</scale>
    </formulas>
    <formulas>
        <name>Net_commission_to_VCPPFormula</name>
        <dataType>Currency</dataType>
        <expression>{!Input_Opportunity.Gross_commission_n__c} - {!Input_Opportunity.Total_sales_rep_commission_n__c}</expression>
        <scale>2</scale>
    </formulas>
    <formulas>
        <name>Net_Sale_Price_to_SPVFormula</name>
        <dataType>Currency</dataType>
        <expression>{!Input_Opportunity.Total_Product_Price__c} - {!Input_Opportunity.Gross_commission_n__c}</expression>
        <scale>2</scale>
    </formulas>
    <formulas>
        <name>Total_sales_rep_commisionFormula</name>
        <dataType>Currency</dataType>
        <expression>{!Input_Opportunity.Total_Product_Price__c} * ({!Input_Opportunity.Sales_commission_rate_c__c} / 100)</expression>
        <scale>2</scale>
    </formulas>
    <interviewLabel>Opportunity : VCPP Commission Formula Flow Sub Flow {!$Flow.CurrentDateTime}</interviewLabel>
