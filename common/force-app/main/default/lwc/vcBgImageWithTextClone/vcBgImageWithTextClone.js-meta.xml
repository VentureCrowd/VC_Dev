<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>52.0</apiVersion>
    <isExposed>true</isExposed>
    <targets>
        <target>lightning__AppPage</target>
        <target>lightning__RecordPage</target>
        <target>lightning__HomePage</target>
        <target>lightningCommunity__Default</target>
        <target>lightningCommunity__Page</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__RecordPage,lightningCommunity__Default">
            <property name="backgroundimageurl" type="String" required="true" label="Enter Background image url" placeholder="Image public URL" description="Background Image url" default="https://assets.akcelo.com/vc/uploads/2020/09/Smart-City-smart-touch-GRAD-FV-1.jpg" />

            <property name="titleText" type="String" label="Title Content" placeholder="Title" default="Title" />
            <property name="IntroText" type="String" label="Introduction Content" placeholder="Intoduction" default="Introduction" />

            <property name="primaryButtonLabel" type="String" label="Primary Button Label" placeholder="Label" default="Start Over" />
            <property name="primaryButtonColor" type="String" datasource="Teal, Pink, Purple, Ghost" label="Primary Button Colour" placeholder="CTA - Primary Color" description="" default="Teal" />
            <property name="primaryButtonLink" type="String" label="Primary Button URL" placeholder="Same Page Section Name or URL" description="Links url for Primary Button" />
            <property name="primaryButtonSameOrNew" datasource="Same Tab, New Tab" type="String" label="Primary Link Target" placeholder="Behaviour of the Link or URL" description="" />
            <property name="textAlign" datasource="left,center,right" type="String" label="Text Alignment" placeholder="Alignment of text" description="" />
            <property name="fontcolor"  type="String" label="Font Color" placeholder="Color of Font" description="" />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>