            <property name="firstImgFooterText" type="String" label="First Image Footer Text" default="" />
            <property name="secondImgFooterText"  type="String" label="Second Image Footer Text" default="" />
            <property name="thirdImgFooterText" type="String" label="Third Image Footer Text" default="" />

            <property name="footerBtnLabel" type="String" label="Footer Button Label" default="Read More"/>
