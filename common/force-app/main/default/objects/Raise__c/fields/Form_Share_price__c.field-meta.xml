<?xml version="1.0" encoding="UTF-8"?>
<CustomField xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Form_Share_price__c</fullName>
    <description>This field indicates the price per share.</description>
    <formula>IF(Share_Price__c &gt; 0, 
   Share_Price__c, 
   Form_Valuation__c / Form_Number_of_shares_on_issue__c
)</formula>
    <formulaTreatBlanksAs>BlankAsZero</formulaTreatBlanksAs>
    <inlineHelpText>Specify the price per share for the current offering.</inlineHelpText>
    <label>Share price</label>
    <precision>18</precision>
    <required>false</required>
    <scale>2</scale>
    <trackHistory>false</trackHistory>
    <trackTrending>false</trackTrending>
    <type>Currency</type>
</CustomField>
